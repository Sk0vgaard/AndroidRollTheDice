<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.skovgaard.androidrollthedice.MainActivity">

    <LinearLayout
        android:id="@+id/diceView"
        android:layout_width="220dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:scaleType="fitCenter"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/dice1"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginRight="20dp"
            android:src="@drawable/dice1" />

        <ImageView
            android:id="@+id/dice2"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/dice2" />

    </LinearLayout>

    <Button
        android:id="@+id/rollDiceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="61dp"
        android:text="Roll the dice"
        android:textAlignment="center"
        android:textSize="24sp" />

    <Button
        android:id="@+id/logBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/diceView"
        android:layout_centerHorizontal="true"
        android:text="Log"
        android:textAlignment="center"
        android:textSize="14sp"
        android:textStyle="italic" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/logBtn"
        android:layout_alignParentRight="true"
        android:layout_marginTop="23dp" />


</RelativeLayout>
